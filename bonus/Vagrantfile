Vagrant.configure("2") do |config|
  config.vm.define "lvarela" do |server|
    server.vm.box = "generic/alpine318"

    # Carpeta compartida
    server.vm.synced_folder ".", "/vagrant", type: "virtualbox"
    
    # Recursos
    server.vm.provider "virtualbox" do |vb|
      vb.name = "lvarela"
      vb.memory = 6000
      vb.cpus = 4
    end

    # Red y hostname
    server.vm.hostname = "lvarela"
    server.vm.network "private_network", ip: "192.168.56.110"
  
    # Nombre en VirtualBox
    server.vm.provider "virtualbox" do |vb|
      vb.name = "lvarela"
    end

    # Acceso desde host (127.0.0.1) -> a VM -> (port-forward) -> Services del cluster
    server.vm.network "forwarded_port", guest: 8081, host: 18081, host_ip: "127.0.0.1" # Argo CD
    server.vm.network "forwarded_port", guest: 8082, host: 18082, host_ip: "127.0.0.1" # GitLab

    # Provisioning
    server.vm.provision "shell", inline: <<-SHELL
      set -euo pipefail

      cd /vagrant
      chmod +x scripts/*.sh

      scripts/run_all.sh
    SHELL
  end
end
